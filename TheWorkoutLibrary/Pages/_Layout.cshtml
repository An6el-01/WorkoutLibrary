<!DOCTYPE html>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/CSS/StyleSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
<div>
    @RenderBody()
    
    <div class="menu-btn">
        <div class="menu-btn_burger"></div>
    </div>
    <nav class="Nav">
        <a asp-page="/Index" class="navLink">
            <span class="material-icons navIcon">home</span>
            <span class="navText">Dashboard</span>
        </a>

        <a asp-page="/Profile" class="navLink">
            <span class="material-icons navIcon">person</span>
            <span class="navText">Profile</span>
        </a>

        <a asp-page="/browseVideos" class="navLink">
            <span class="material-icons navIcon">videocam</span>
            <span class="navText">Browse Videos</span>
        </a>
       
        <a asp-page="/createWorkouts" class="navLink">
            <span class="material-icons navIcon">directions_run</span>
            <span class="navText">Created Workouts</span>
        </a>

        <a asp-page="/Calendar" class="navLink">
            <span class="material-icons navIcon">calendar_month</span>
            <span class="navText">Calendar</span>
        </a>
    </nav>
    <div class="Navigation">
        <nav>
            <ul>
                <li><a asp-page="/LoginLogout">Log-in</a></li>
                <li><a asp-page="/browseVideos">Browse Videos</a></li>
                <li><a asp-page="/createWorkouts">Create Workouts</a></li>
                <li><a asp-page="/createdWorkoutLibrary">Created Workout Library</a></li>
                <li><a asp-page="/Index">Dashboard</a></li>
                <li><a asp-page="/Payment">Payment</a></li>
                <li><a asp-page="/Profile">Profile</a></li>
                <li><a asp-page="/Register">Register</a></li>
                <li><a asp-page="/weeklyWorkout">Weekly Workout</a></li>
                <li><a asp-page="/Upload">Upload</a></li>
                <li><a asp-page="/Calendar">Calendar</a></li>
            </ul>
        </nav>
    </div>
</div>
<footer class = "border-top footer text-muted">
    <div class="footer">
        
        <div class="SocialLinks">
            <img class="WLLogo" src="Images/WL Master Logo.jpg" alt="Logo">
            <p> Social Links: </p>
        </div>

        <div class="DisplayFooter">
            <div class="Instagram">
                <img class="InstaLogo" src="Images/Instagram.png" alt="Logo">
                <p><a class = "InstaText" href="https://instagram.com/the.workoutlibrary?igshid=">Instagram</a></p>
            </div>
            
            <div class="Email">
                <img class="EmailLogo" src="Images/Email.webp" alt="Logo">
                <p><a class = "JamesEmail" href="mailto:james@radicalfitness.co.uk"> james@radicalfitness.co.uk</a></p>
            </div>
        </div>
    </div>
</footer>
    
</body>
</html>

<script>
const menuBtn = document.querySelector('.menu-btn');
let menuOpen = false;
menuBtn.addEventListener('click', () => {
if (!menuOpen) {
menuBtn.classList.add('open');
menuOpen = true;
} else {
menuBtn.classList.remove('open');
menuOpen = false;
}
});
</script>
