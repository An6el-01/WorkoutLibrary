@page "{id:int}"
@using TheWorkoutLibrary.Data
@model TheWorkoutLibrary.Pages.EditExcerciseModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<h1>Edit Exercise</h1>

<form class="EnterWorkoutForm" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div>
        <input class="FormInputs" type="text" name="name" asp-for="excercise.Name" placeholder="Exercise Name" />
        <span asp-validation-for="excercise.Name"></span>
    </div>
    <div>
        <input class="FormInputs" type="text" name="notes" asp-for="excercise.Notes" placeholder="Notes" />
        <span asp-validation-for="excercise.Notes"></span>
    </div>
    <div class="WorkoutDifficulty">
        <h4>Beginner</h4>
        <h4>Intermediate</h4>
        <h4>Advanced</h4>
        @foreach (var level in Model.difficulties)
        {
            <input class="RadioInput" type="radio" name='difficulty' asp-for="excercise.Difficulty" value="@level" />
            <span asp-validation-for="excercise.Difficulty"></span>
        }
    </div>
    <div>
        <input class="FormInputs" name="youtube" asp-for="excercise.YoutubeURL" placeholder="Youtube URL" />
        <span asp-validation-for="excercise.YoutubeURL"></span>
    </div>
    <button class="EnterWorkoutBtn" type="submit" asp-page-handler="Save">SAVE</button>
</form>
