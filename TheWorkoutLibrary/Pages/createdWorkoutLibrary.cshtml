            <td class="itemDifficulty">@item.Difficulty</td>
            <td>
            <button id="AddBtn" type="submit" asp-page-handler="Add" asp-route-recipeID="@item.Id">Add</button>
            </td>
            </tr>
            }





            </tbody>
            </table>*@





        @foreach (var workout in Model.workouts)
        {
            <img class="WorkoutsPicture" src="@workout.ImageURL" alt="@workout.ImageURL">
            /* width = "600" height = "400"*/
            <div>
                <h2>@workout.Name</h2>
                <h2>@workout.Notes</h2>



                @if (workout.Difficulty == "Beginner")
                {
                    <div class="material-symbols-outlined1">
                        <span class="material-symbols-outlined">fitness_center</span>
                    </div>}
                @if (workout.Difficulty == "Intermediate")
                {
                    <div class="material-symbols-outlined2">
                        <span class="material-symbols-outlined">fitness_center</span>
                    </div>}
                @if (workout.Difficulty == "Advanced")
                {
                    <div class="material-symbols-outlined3">
                        <span class="material-symbols-outlined">fitness_center</span>
                    </div>}



            </div>





            <div>
                <h4>Included Excercises: @string.Join(", ", workout.Excercises.Select(x => x.Excercise.Name))</h4>
                <h4>Notes: @string.Join(", ", workout.Excercises.Select(x => x.Excercise.Notes))</h4>



            </div>

            <a asp-page="/Description" asp-route-id="@workout.Id">Details</a>
            <br />
        }



    </div>
</div>