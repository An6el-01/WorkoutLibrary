    @foreach (var workout in Model.workouts)
    {
        <div class="savedWorkoutItem">
            <img class="WorkoutsPicture" src="@workout.ImageURL" alt="@workout.ImageURL">
            <div>
                <h2 class="savedWorkoutName">@workout.Name</h2>



                @if (workout.Difficulty == "Beginner")
                {
                    <div class="material-symbols-outlined1">
                        <span class="material-symbols-outlined">fitness_center</span>
                    </div>}
                @if (workout.Difficulty == "Intermediate")
                {
                    <div class="material-symbols-outlined2">
                        <span class="material-symbols-outlined">fitness_center</span>
                        <span class="material-symbols-outlined">fitness_center</span>
                    </div>}
                @if (workout.Difficulty == "Advanced")
                {
                    <div class="material-symbols-outlined3">
                        <span class="material-symbols-outlined">fitness_center</span>
                        <span class="material-symbols-outlined">fitness_center</span>
                        <span class="material-symbols-outlined">fitness_center</span>



                    </div>}





            </div>







            <div>
                <h4 class="savedWorkoutIncExercises">Included Excercises: @string.Join(", ", workout.Excercises.Select(x => x.Excercise.Name))</h4>





            </div>



            <a asp-page="/Description" asp-route-id="@workout.Id">
                <div class="detailsIcon">
                    <span class="material-icons">
                        arrow_forward_ios
                    </span>
                </div>
            </a>
            <br />
        </div>
        <hr class="lineSavedWorkouts"/>
